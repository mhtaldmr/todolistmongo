<%- include("header") -%>

<body>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <p class="information">Type, Press "+" to Add, Check to Delete</p>

    <div class="box">
        <%  newItems.forEach(item => { %>
        <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" value="<%= item._id %>" name="deletebox" onchange="this.form.submit()"></input>
                <p><%= item.name  %></p>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </div>
        </form>
        <%}); %>


        <form class="item" action="/" method="POST">
            <input type="text" name="newItemToAdd" placeholder="New Item" autocomplete="off" autofocus></input>
            <button type="submit" name="addedToList" value= "<%= listTitle  %>"  >+</button>
        </form>

    </div>

    <%- include("footer") -%>